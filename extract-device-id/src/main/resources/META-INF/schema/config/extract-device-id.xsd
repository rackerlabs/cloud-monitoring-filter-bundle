<?xml version="1.0" encoding="UTF-8"?>

<xs:schema elementFormDefault="qualified" attributeFormDefault="unqualified"
           targetNamespace="http://docs.example.com/repose/extract-device-id/v1.0"
           xmlns:extract-device-id="http://docs.example.com/repose/extract-device-id/v1.0"
           xmlns:html="http://www.w3.org/1999/xhtml"
           xmlns:xerces="http://xerces.apache.org"
           xmlns:saxon="http://saxon.sf.net/"
           xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning"
           xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <!-- This matches the root element tag in extract-device-id.cfg.xml created in step 14. -->
    <xs:element name="extract-device-id" type="extract-device-id:ExtractDeviceIdConfig"/>
    <xs:complexType name="ExtractDeviceIdConfig">
        <xs:annotation>
            <xs:documentation>
                <html:p>
                    Extract Device ID can be configured by editing the extract-device-id.cfg.xml file.
                    The user can specify the messages to print to the log.
                </html:p>
            </xs:documentation>
        </xs:annotation>

        <xs:all>
            <!-- This matches the child tag <extract-device-id> in extract-device-id.cfg.xml. -->
            <xs:element name="messages" type="extract-device-id:MessageList" minOccurs="1" maxOccurs="1"/>
            <!-- There must be one and only one <messages> tag in extract-device-id.cfg.xml -->
        </xs:all>
    </xs:complexType>
    <xs:complexType name="MessageList">
        <xs:annotation>
            <xs:documentation>
                <html:p>
                    List messages.
                </html:p>
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <!-- This matches the child tag <messages> in extract-device-id.cfg.xml. -->
            <!-- There is one or more instance of a <message> tag in extract-device-id.cfg.xml -->
            <xs:element name="message" type="extract-device-id:Message"
                        minOccurs="1" maxOccurs="unbounded"/>
        </xs:sequence>

        <!-- Must match <message> tag (children of messages tag in extract-device-id.cfg.xml). -->
        <xs:assert vc:minVersion="1.1"
                   test="count(distinct-values(extract-device-id:message /@value)) = count(extract-device-id:message /@value)"
                   xerces:message="A message must have value unique within their containing messages list"
                   saxon:message="A message must have value unique within their containing messages list"/>
    </xs:complexType>

    <!-- This results in the generation of
    target/generated-sources/xjc/org/openrepose/filters/custom/extractdeviceid/config/Message.java
    with a property named value with type: String -->
    <xs:complexType name="Message">
        <xs:annotation>
            <xs:documentation>
                <html:p>
                    The message
                </html:p>
            </xs:documentation>
        </xs:annotation>

        <!-- There is only one attribute of the <message> tag, and it is required. -->
        <xs:attribute name="value" type="xs:string" use="required">
            <xs:annotation>
                <xs:documentation>
                    <html:p>
                        This is the value that is printed to the log.
                    </html:p>
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>
</xs:schema>
